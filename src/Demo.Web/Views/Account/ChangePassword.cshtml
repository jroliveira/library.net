@model Demo.Web.Models.Account.ChangePasswordViewModel
@{
    ViewBag.Title = "Alterar senha";
}
<h4>
    <span class="text-danger">projeto</span> <small>alterar senha</small>
</h4>

<hr />

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal" })) {
    
    Html.ValidationSummary(true);
    
    <div class="form-group">
        @Html.LabelFor(m => m.OldPassword, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-4">
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                @Html.TextBoxFor(m => m.OldPassword, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(m => m.OldPassword, null, new { @class = "help-block" })
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-4">
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                @Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(m => m.NewPassword, null, new { @class = "help-block" })
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-4">
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "help-block" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <a href="@Url.Action("Index", "Home")" class="btn btn-link"><span class="glyphicon glyphicon-circle-arrow-left"></span>&nbsp; Voltar</a>
            <button type="submit" class="btn btn-success">Enviar</button>
        </div>
    </div>
}