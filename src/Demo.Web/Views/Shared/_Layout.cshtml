@using appsimple.mvc.bootstrap.Lib.Extensions

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("head", false)
    @Html.Partial("_html5shiv")
</head>
<body>
    @{ var user = User.ToLoggedUser(); }
    <div id="wrap">
        <header>
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container">
                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>
                        <a class="brand" href="@Url.Action("Index","Home")" title="finance">
                            projeto
                        </a>
                        <div class="nav-collapse collapse">
                            <ul class="nav">
                                <li class="divider-vertical"></li>
                            </ul>
                            <ul class="nav pull-right">
                                <li class="divider-vertical"></li>
                                <li class="dropdown">
                                    <a data-toggle="dropdown" class="dropdown-toggle" href="#"><i class="icon-user icon-white"></i> @user.Email &nbsp; <b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="@Url.Action("Edit", "Account")"><i class="icon-edit"></i> Editar conta</a></li>
                                        <li><a href="@Url.Action("ChangePassword", "Account")"><i class="icon-lock"></i> Alterar senha</a></li>
                                        <li class="divider"></li>
                                        <li><a href="@Url.Action("LogOff", "Login")"><i class="icon-off"></i> Sair</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <article>
            <div class="container">
                @Html.Partial("_alerts") 
                @Html.Partial("_validationSummary")
                @RenderBody()
            </div>
        </article>
        <footer>
            <div class="container">
                <p class="pull-left">&copy; <a href="http://junioro.wordpress.com" rel="author">Júnior Oliveira</a> @DateTime.Now.ToString("yyyy").</p>
                <p class="pull-right">projeto</p>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/js")
    @RenderSection("scripts", required: false)
</body>
</html>
