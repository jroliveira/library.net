@model Demo.Web.Models.Login.LogOnViewModel
@{
    ViewBag.Title = "Logon";
    Layout = "~/Views/shared/_LayoutEmpty.cshtml";
}
<h4><span class="text-info">projeto</span><small> entrar no sistema</small></h4>
<hr />
@using (Html.BeginForm()) {
    <fieldset class="form-horizontal">
        <div class="control-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            <div class="controls">
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-envelope"></i></span>
                    @Html.TextBoxFor(m => m.Email, new { @class = "input-xlarge" })
                </div>
                @Html.ValidationMessageFor(m => m.Email, null, new { @class = "help-inline" })
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            <div class="controls">
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-lock"></i></span>
                    @Html.PasswordFor(m => m.Password, new { @class = "input-xlarge" })
                </div>                
                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "help-inline" })
            </div>
        </div>
        <div class="form-actions">
            <a class="btn btn-link " href="@Url.Action("ForgotPassword", "Account")"><i class="icon-question-sign"></i> Recuperar senha</a>
            <button type="submit" class="btn btn-success pull-right"><i class="icon-ok-sign icon-white"></i> Entrar</button>
            <a class="btn btn-link clearfix" href="@Url.Action("Create", "Account")"><i class="icon-plus-sign"></i> Criar conta</a>
        </div>
    </fieldset>
}