@model Demo.Web.Models.Login.LogOnViewModel
@{
    ViewBag.Title = "Entrar";
    Layout = "~/Views/shared/_LayoutEmpty.cshtml";
}

<h4>
    <span class="text-danger">projeto</span> <small>login</small>
</h4>

<hr />

@using (Html.BeginForm("LogOn", "Login", FormMethod.Post, new { @class = "form-horizontal" })) {

    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-4">
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(m => m.Email, null, new { @class = "help-block" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-4">
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "help-block" })
        </div>
    </div>

    <hr />

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <a href="@Url.Action("ForgotPassword", "Account")" class="btn btn-link"><span class="glyphicon glyphicon-question-sign"></span>&nbsp; Recuperar senha</a>
            <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-log-in"></span>&nbsp; Entrar</button>
            <br />
            <a href="@Url.Action("Create", "Account")" class="btn btn-link"><span class="glyphicon glyphicon-plus-sign"></span>&nbsp; Criar conta</a>
        </div>
    </div>
}